    { '技術評論社' => 1, '翔泳社' => 2, '日経BP' => 3 } %><br />
  <%= f.select(:publisher,
    [['技術評論社', 1], ['翔泳社', 2], ['日経BP', 3]]) %><br />
  <%= f.select :publisher, ['技術評論社', '翔泳社', '日経BP'],
    { include_blank: '選択してください' }, multiple: true %>
<% end %>
