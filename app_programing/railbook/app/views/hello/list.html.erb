<table class="table">
  <thead>
    <tr>
      <th>ISBNコード</th><th>書名</th><th>価格</th>
      <th>出版社</th><th>刊行日</th><th>ダウンロード</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
  <tr>

<%
=begin%>
 <tr class="<%= cycle('table-primary', '') %>">
<%
=end%>

<%
=begin%>
 <% @books.each_with_index do |book, index| %>
    <tr class="<%=class_names('table-primary': index % 2 != 0)%>">
<%
=end%>

      <td><%= book.isbn %></td>
      <td><%= book.title %></td>


<%
=begin%>
 <td class="<%= cycle('table-primary', '') %>">
        <%= book.isbn %></td>
      <td class="<%= current_cycle %>">
        <%= book.title %></td>
<%
=end%>

      <td><%= book.price %>円</td>
      <td><%= book.publisher %></td>
      <td><%= book.published %></td>
      <td><%= book.dl %></td>
    </tr>
  <% end %>
  </tbody>
</table>
